-@ var examples:java.util.List[mikaelhg.example.Example]
-@ var comedies:java.util.List[mikaelhg.example.Example]
!!! 5
%html
  %head
    %link(rel="stylesheet" href="http://current.bootstrapcdn.com/bootstrap-v204/css/bootstrap-combined.min.css")
    %title Example application with #{examples.size} examples.
  %body(style="padding-top: 60px;")
    .navbar.navbar-fixed-top
      .navbar-inner
        .container-fluid
          %a.brand(href="#") Example project
    .container-fluid
      .row-fluid
        .page-header
          %h1 Our examples
        %form(method='POST' action='/submitExample')
          %input(type='text' name='name')
          %input(type='submit' value='OK' class="btn")
        - for(x <- examples)
          %p.example<
            %a(class="btn" href='/edit/#{x.getId}') #{x.getName}!
        %p Comedies:
        - for(x <- comedies)
          %p.comedy<
            %a(class="btn success" href='/edit/#{x.getId}') #{x.getName}!
  %script(src="http://current.bootstrapcdn.com/bootstrap-v204/js/bootstrap.min.js")
